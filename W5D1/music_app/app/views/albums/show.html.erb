<h1>Album Show Page</h1>

<h3>Title: <%= @album.title %></h2>
<h3>Band: <%= link_to "#{@album.band.name}", band_url(@album.band) %></h3>
<h3><%= @album.live ? 'Live' : 'Studio' %></h3>
<h3>Year: <%= @album.yr %></h3>

<div class="showpage-buttons">
  <%= button_to "Edit Album", edit_album_url(@album), method: :get %>
  <%= button_to "Delete Album", album_url(@album), method: :delete %>
</div>
<%= button_to "Add Track", new_album_track_url(@album.id), method: :get %>

<h3>Track List:</h3>
<% if @album.tracks %>
  <ul>
    <% @album.tracks.each do |track| %>
      <li> <%= track.title %></li>
      <%= button_to "Show", track_url(track), method: :get %>
    <% end %>
  </ul>
<% else %>
  <p>This Album has no track</p>
<% end %>