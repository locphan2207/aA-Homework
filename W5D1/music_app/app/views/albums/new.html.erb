<h1>Create an Album:</h1>
<h2>for <%= @current_band.name %></h2>
<%= render 'shared/error_form' %>
<form action="<%= albums_url %>" method="post">
  <%= auth_token %>
  <label for="title">Album Name: </label>
  <input id="title" type="text" name="album[title]" value=""><br>
  <label for="band">Band Name: </label>
  <select id="band" name="album[band_id]">
    <% Band.all.each do |band| %>
      <option value="<%= band.id %>" <%= 'selected="selected"' if @current_band.id == band.id %>"> <%= band.name %></option>
    <% end %>
  </select>
  <br>
  <div class="">
    <input type="radio" name="album[live]" value="true">Live
    <input type="radio" name="album[live]" value="false" checked>Studio<br>
  </div>
  <label for="year">Year: </label>
  <input id="year" type="text" name="album[yr]" value=""><br>
  <input type="submit" name="" value="Create Album">
</form>
